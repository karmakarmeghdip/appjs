{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@appjs/solid-renderer",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "bun-types"
    ],
    "paths": {
      "@appjs/runtime": [
        "../packages/appjs-runtime/src/index.ts"
      ],
      "@appjs/solid-renderer": [
        "../packages/solid-renderer/src/index.ts"
      ],
      "@appjs/solid-renderer/jsx-runtime": [
        "../packages/solid-renderer/src/jsx-runtime.ts"
      ],
      "@appjs/solid-renderer/jsx-dev-runtime": [
        "../packages/solid-renderer/src/jsx-dev-runtime.ts"
      ]
    }
  },
  "include": [
    "./**/*.tsx",
    "./**/*.ts",
    "./**/*.js"
  ]
}
